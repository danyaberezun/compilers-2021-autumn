public fun opValue (op) {
  case op of
      "+"  -> infix +
	| "-"  -> infix -
	| "*"  -> infix *
	| "/"  -> infix /
	| "%"  -> infix %
	| "==" -> infix ==
	| "!=" -> infix !=
	| "<"  -> infix <
	| "<=" -> infix <=
	| ">"  -> infix >
	| ">=" -> infix >=
	| "&&" -> infix &&
	| "!!" -> infix !!
  esac
}
