-- Signals an error; takes an error message and location info
fun error (msg, loc) {
  failure ("%s at %d:%d\n", msg, loc.fst, loc.snd)
}

-- An attribute-processing functions
-- Attributes are:
--   Val  --- a plain value (aka "rvalue")
--   Ref  --- a reference to a mutable cell (aka "lvalue")
--   Void --- no value (aka "void"/"unit")

-- Checks if a plain value "val" can be used in the context described by
-- the attribute "atr".
fun assertValue (atr, v, loc) {
  case atr of
    Ref  -> error ("reference expected", loc)
  | Void -> Ignore (v)
  | _    -> v
  esac
}

fun assertVoid (atr, v, loc) {
  case atr of
    Void -> v
  | Val  -> error ("value expected", loc)
  | _    -> error ("reference expected", loc)
  esac
}

-- A parser of "something" in brackets; l, r are left and right
-- brackets as parsers, p --- a parser of "something"
fun inbr (l, p, r) {
  syntax (-l p -r)
}

fun binop (op) {
  [syntax (pos -s[op]), fun (l, loc, r) {
                          fun (a) {
                            assertValue (a, Binop (op, l (Val), r (Val)), loc)
                          }
                        }
  ]
}

var primary  = memo $ eta syntax (
                                  -- decimal constant
                                  loc=pos x=decimal                                 {fun (a) {assertValue (a, Const (stringInt (x)), loc)}}     |

                                  -- identifier
                                  x=lident                                          {fun (a) {
                                                                                       case a of
                                                                                         Ref  -> Ref (x)
                                                                                       | Void -> Ignore (Var (x))
                                                                                       | _    -> Var (x)
                                                                                       esac
                                                                                    }} |

                                  loc=pos kRead v=inbr[s("("), lident, s(")")]     {fun (a) {
                                                                                      case a of
                                                                                        Void -> Read (v)
                                                                                      | _    -> error ("Void expected", loc)
                                                                                      esac
                                                                                    }} |

                                  loc=pos kWrite v=inbr[s("("), exp, s(")")]     {fun (a) {
                                                                                      case a of
                                                                                        Void -> Write (v(Val))
                                                                                      | _    -> error ("Void expected", loc)
                                                                                      esac
                                                                                    }} |

                                  loc=pos kWhile e=exp kDo body=exp kOd         {fun (a) {
                                                                                      case a of
                                                                                        Void -> While (e(Val), body(Void))
                                                                                      | _    -> error ("Void expected", loc)
                                                                                      esac
                                                                                 }} |

                                  loc=pos kFor s1=exp s[","] e=exp s[","] s2=exp kDo s3=exp kOd {fun(a) {
                                                                                            case a of
                                                                                              Void -> Seq (s1(Void), While (e(Val), Seq(s3(Void), s2(Void))))
                                                                                            | _    -> error ("Void expected", loc)
                                                                                            esac
                                                                                           }} |

                                  loc=pos kDo body=exp kWhile e=exp kOd         {fun (a) {
                                                                                    case a of
                                                                                      Void -> DoWhile(body(Void), e(Val))
                                                                                    | _    -> error("Void expected", loc)
                                                                                    esac
                                                                                 }} |

                                  kIf e=exp kThen tru=exp kElse fls=exp kFi    {fun (a) {
                                                                                    If(e(Val), tru(a), fls(a))
                                                                                 }} |

                                  kIf e=exp kThen tru=exp fls=elifB      {fun (a) {
                                                                                    If(e(Val), tru(a), fls(a))
                                                                                 }} |

                                  loc=pos kSkip                          {fun (a) {
                                                                                      case a of
                                                                                        Void -> Skip
                                                                                      | _    -> error ("Void expected", loc)
                                                                                      esac
                                                                                 }} |

                                  x=inbr[s ("("), exp, s (")")] {x}),

    elifB = memo $ eta syntax (kFi                      {fun (a) {
                                                                  case a of
                                                                    Void -> Skip
                                                                  | _    -> error("Void expected", loc)
                                                                  esac
                                                                }} |
                               kElif e=exp kThen tru=exp kElse fls=exp kFi {fun (a) {
                                                                                If (e(Val), tru(a), fls(a))
                                                                             }} |
                               kElif e=exp kThen tru=exp fls=elifB {fun (a) {
                                                                      If(e(Val), tru(a), fls(a))
                                                                    }}
                              ),

                                  --$(failure ("the rest of primary parsing in not implemented\n"))),
    basic    = memo $ eta (expr ({[Right, {[s (":="),
                                            fun (l, loc, r) {
                                              fun (a) {assertValue (a, Assn (l (Ref), r (Val)), loc)}
                                            }]}],
                                  [Left , map (binop, {"!!"})],
                                  [Left , map (binop, {"&&"})],
                                  [Nona , map (binop, {"==", "!=", "<", ">", "<=", ">="})],
                                  [Left , map (binop, {"+", "-"})],
                                  [Left , map (binop, {"*", "/", "%"})]
                                 },
                                 primary)),
    exp      = memo $ eta syntax (basic | s1=basic s[";"] s2=exp {fun (a) {Seq (s1 (Void), s2 (a))}});

-- Public top-level parser
public parse = syntax (s=exp {s (Void)});
