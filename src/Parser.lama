-- Parser

import Ostap;
import Lexer;
import List;
import Fun;
import Matcher;

-- A parser of "something" in brackets; l, r are left and right
-- brackets as parsers, p --- a parser of "something"
fun inbr (l, p, r) {
  syntax (-l p -r)
}

-- Primary expression
var primary = memo $ eta syntax (
    x=decimal {Const (stringInt (x))}
  | x=lident  {Var (x)}
  | inbr[s("("), exp, s(")")]
);

fun combiner(lhs, op, rhs) { Binop (op, lhs, rhs) }

var exp = memo $ expr (
  {
    [ Left, { [ s ("&&"), combiner ]
            , [ s ("!!"), combiner ]
            } ],

    [ Nona, { [ s (">"), combiner ]
            , [ s ("<"), combiner ]
            , [ s (">="), combiner ]
            , [ s ("<="), combiner ]
            , [ s ("=="), combiner ]
            , [ s ("!="), combiner ]
            } ],

    [ Left, { [ s ("+"), combiner ]
            , [ s ("-"), combiner ]
            } ],

    [ Left, { [ s ("*"), combiner ]
            , [ s ("/"), combiner ]
            , [ s ("%"), combiner ]
            } ]
  },
  primary
);

var oneStmt = memo $ eta syntax
  ( kSkip {Skip}
  | name=lident s[":="] x=exp {Assn (name, x)}
  | kRead s["("] name=lident s[")"] {Read (name)}
  | kWrite s["("] x=exp s[")"] {Write (x)}
  -- | kIf cond=exp kThen
  | kWhile cond=exp kDo block=stmt kOd {While (cond, block)}
  );

-- var stmt = memo $ eta syntax (
--     oneStmt -eof
--   | lhs=oneStmt s[";"] rhs=stmt {Seq(lhs, rhs)}
-- );

var stmt = memo $ expr (
  {
    [
      Left, {
        [
          s (";"),
          fun (lhs, op, rhs) { Seq (lhs, rhs) }
        ]
      }
    ]
  },
  oneStmt
);

-- Public top-level parser
public parse = stmt;
