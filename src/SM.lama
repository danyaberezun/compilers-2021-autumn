-- Takes an expression, returns a list of stack machine instructions
fun compileExpr (expr) {
  case expr of
    Var (varname) -> singletonBuffer(LD(varname))
  | Const (i) -> singletonBuffer(CONST(i))
  | Binop(op, expr1, expr2) ->
      compileExpr(expr2)
      <+> compileExpr(expr1)
      <+> singletonBuffer(BINOP(op))
  esac
}

